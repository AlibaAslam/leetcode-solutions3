#include <vector>
#include <algorithm>

class Solution {
public:
    int minStartValue(std::vector<int>& nums) {
        int min_sum = 0;
        int current_sum = 0;

        for (int num : nums) {
            current_sum += num;
            min_sum = std::min(min_sum, current_sum);
        }

        return 1 - min_sum;
    }
};
